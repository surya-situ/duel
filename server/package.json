{
  "name": "duel",
  "version": "1.0.0",
  "description": "A competitive gaming platform for real-time duels and epic battles.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./dist/server.js",
    "server": "nodemon ./dist/server.js",
    "watch": "tsc -w",
    "build": "tsc && npm run copy-files",
    "dev": "concurrently \"npm run watch\" \"npm run server\" \"npm run watch-views\" ",
    "copy-files": "copyfiles -u 1 \"src/views/**/*\" dist/ ",
    "watch-views": "nodemon --watch src/views -e ejs -x \"npm run copy-files\" "
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/surya-situ/duel.git"
  },
  "keywords": [
    "duel",
    "game",
    "battle",
    "real-time",
    "multiplayer",
    "competitive",
    "clash",
    "skirmish",
    "gaming"
  ],
  "author": "Suryakanta Das",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/surya-situ/duel/issues"
  },
  "homepage": "https://github.com/surya-situ/duel#readme",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@types/ejs": "^3.1.5",
    "@types/nodemailer": "^6.4.15",
    "bullmq": "^5.12.9",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "nodemailer": "^6.9.14",
    "prisma": "^5.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4"
  }
}
