{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "Node16",
    "rootDirs": ["src", "src/customTypes.d.ts"],
    "outDir": "dist",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true                    
  },
  "include": ["src"]
}